@model IEnumerable<RoomViewModel>

@{
    ViewData["Title"] = "Manage Rooms";
    Layout = "~/Views/Shared/adminLayout.cshtml";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

@*     <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-custom mb-3">Back to Dashboard</a>
 *@
    <table id="roomsTable" class="display">
        <thead>
            <tr>
                <th>Image</th> 
                <th>Hotel</th>
                <th>Room Type</th>
                <th>Price</th>
                <th>Availability</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="~/images/@item.ImagePath" alt="Room Image" style="width: 100px; height: auto;" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@item.HotelName</td>
                    <td>@item.RoomType</td>
                    <td>@item.Price</td>
                    <td>@item.AvailabilityStatus</td>
                    <td>
                        <a href="@Url.Action("Edit", "Rooms", new { id = item.Id })" class="btn btn-warning btn-sm action edit">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="#" class="btn btn-danger btn-sm action delete" onclick="deleteRoom(@item.Id); return false;">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container {
        margin: 40px;
    }

    .btn-custom {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        margin-bottom: 20px;
    }

        .btn-custom:hover {
            background-color: #0056b3;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

        .btn-custom:focus {
            outline: none;
        }

    .addRoom a {
        text-decoration: none;
        text-align: center;
        background-color: darkred;
        color: white;
        font-size: 1rem;
        padding: 5px 33px;
        border-radius: 12px;
        margin: 40px;
    }

    .action {
        text-decoration: none;
        margin: 4px;
    }

    .edit {
        color: #ff7d00;
    }

    .delete {
        color: red;
    }

    h2 {
        margin-bottom: 12px;
    }
</style>

<script>
    $(document).ready(function () {
        $('#roomsTable').DataTable({
            // DataTable options can go here
        });
    });

    function deleteRoom(roomId) {
        if (confirm('Are you sure you want to delete this room?')) {
            fetch(`@Url.Action("Delete", "Rooms")/${roomId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                }
            })
                .then(response => {
                    if (response.ok) {
                        window.location.href = '@Url.Action("Index", "Rooms")';
                    } else {
                        alert('Error deleting room');
                    }
                })
                .catch(error => console.error('Error:', error));
        }
    }
</script>

<div class="addRoom">
    <a asp-action="Create" asp-controller="Rooms">
        Add Room <i class="fa-solid fa-plus"></i>
    </a>
</div>
