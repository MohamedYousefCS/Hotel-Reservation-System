@model Room

@{
    ViewData["Title"] = "Create Room";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <!-- تأكد من إضافة enctype هنا -->
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="HotelId" class="control-label">Hotel</label>
        <select asp-for="HotelId" class="form-control" asp-items="ViewBag.Hotels">
            <option value="">Select Hotel</option>
        </select>
        <span asp-validation-for="HotelId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomType" class="control-label">Room Type</label>
        <input asp-for="RoomType" class="form-control" />
        <span asp-validation-for="RoomType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label">Price</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AvailabilityStatus" class="control-label">Availability Status</label>
        <select asp-for="AvailabilityStatus" class="form-control">
            <option value="true">Available</option>
            <option value="false">Not Available</option>
        </select>
        <span asp-validation-for="AvailabilityStatus" class="text-danger"></span>
    </div>

    <!-- إضافة حقل الصورة -->
    <div class="form-group">
        <label for="imageFile">Room Image</label>
        <input type="file" name="imageFile" class="form-control-file" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Room</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>
</form>


<style>
    .form-group{
        margin: 10px 0px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
