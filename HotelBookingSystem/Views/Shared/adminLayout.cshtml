
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>


    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />



    <link rel="stylesheet" href="~/css/Layout.css">
    <title>@ViewData["Title"] - Admin Dashboard</title>
</head>
<body>
    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <i class='bx bxs-grid-alt'></i>
            <span class="text">Admin Dashboard</span>
        </a>
        <ul class="side-menu top">
            <li class="active">
                <a href="@Url.Action("Dashboard", "Admin")">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("RegisteredUsers", "Admin")">
                    <i class='bx bxs-group'></i>
                    <span class="text">Registered Users</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Rooms")">
                    <i class='bx bx-hotel'></i>
                    <span class="text">Rooms</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Hotels")">
                    <i class='bx bx-bed'></i>
                    <span class="text">Hotels</span>
                </a>
            </li>

            <li>
                <a href="@Url.Action("ViewReservations", "Admin")">
                    <i class='bx bx-hotel'></i>
                    <span class="text">Reservations</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("ContactList", "Home")">
                    <i class='bx bx-chat'></i>
                    <span class="text">Message</span>
                </a>
            </li>
            <li>
            </li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="@Url.Action("Profile", "Account")">
                    <i class='bx bxs-cog'></i>
                    <span class="text">Settings</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Logout", "Account")" class="logout">
                    <i class='bx bxs-log-out-circle'></i>
                    <span class="text">Logout</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->
    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <div class="notification">
                <a href="@Url.Action("Messages", "Admin")" class="notification">
                    <i class='bx bxs-bell'></i>
                    <span id="numOfMessages" class="num">0</span>
                </a>
            </div>
            <div class="profile">
                <a href="@Url.Action("Profile", "Account")">
                    <img src="~/images/img2.png" alt="Profile Image">
                </a>
            </div>
        </nav>
        <!-- NAVBAR -->
        <!-- MAIN CONTENT -->
        <main>
            @RenderBody()
        </main>
        <!-- MAIN CONTENT -->
    </section>
    <!-- CONTENT -->

    <script src="~/js/script.js"></script>

    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>

</body>
</html>
