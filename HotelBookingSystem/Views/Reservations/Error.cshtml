@model ErrorViewModel1

@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-lg">
                <div class="card-header bg-danger text-white text-center">
                    <h1 class="mb-0">Error</h1>
                </div>
                <div class="card-body text-center">
                    @if (Model != null)
                    {
                        <h2 class="text-danger">@Model.ErrorMessage</h2>

                        @if (Model.ShowRequestId)
                        {
                            <p class="mt-4">
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </p>
                        }
                    }
                    else
                    {
                        <p class="text-warning">You have already booked this room for the selected dates.</p>
                    }

                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-danger mt-4">
                        <i class="fas fa-home"></i> Return to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
