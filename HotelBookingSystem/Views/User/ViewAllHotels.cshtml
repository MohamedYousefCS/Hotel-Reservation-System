@model IEnumerable<Hotel>

@{
    ViewData["Title"] = "Hotels List";
    Layout = "~/Views/Shared/_datatable.cshtml";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<link href="~/css/index.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="header position-fixed top-0 start-0 w-100 headerhome" style="z-index: 3;">
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand logo" href="#">Luxury</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Booking Now</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ViewAllHotels", "User")">Hotels</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Contact Us</a>
                    </li>
                </ul>
            </div>
            <div class="routes">
                @if (Context.Session.GetInt32("UserId") != null)
                {
                    <!-- Links for authenticated users -->
                    <a href="@Url.Action("Profile", "Account")">Profile</a>
                    <a href="@Url.Action("Logout", "Account")">Logout</a>
                    <a href="@Url.Action("MyReservations", "Reservations")"><i class="fas fa-shopping-cart cart-icon"></i></a>

                }
                else
                {
                    <!-- Links for guests (not authenticated) -->
                    <a href="@Url.Action("Login", "Account")">Login</a>
                }
            </div>
        </div>
    </nav>
</div>



<div class="container">
    <h2>@ViewData["Title"]</h2>

 

    <table id="hotelsTable" class="display">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Location</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hotel in Model)
            {
                <tr>
                    <td>@hotel.Id</td>
                    <td>@hotel.Name</td>
                    <td>@hotel.Location</td>
                    <td>@hotel.Description</td>
                
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container{
        margin:30px;
        margin-top:85px
    }
</style>


<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


<script>
    $(document).ready(function () {
        $('#hotelsTable').DataTable({
            // DataTable options can go here
            paging: true,
            searching: true,
            ordering: true,
            info: true
        });
    });

</script>
